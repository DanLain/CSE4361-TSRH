.blue {
    background: #1FCAEC; /* for non-css3 browsers */
    background: -moz-linear-gradient(center top , #1FCAEC, #0BA5DF) repeat scroll 0 0 transparent;
    border: 2px solid #FFFFFF;
    color: #D9EEF7;    
}
.blue:hover {
    background: #0095CC; /* for non-css3 browsers */
    background: -moz-linear-gradient(center top , #0095CC, #00678E) repeat scroll 0 0 transparent;
}
.blue:active {
    background: #0078A5; /* for non-css3 browsers */
    background: -moz-linear-gradient(center top , #0078A5, #00ADEE) repeat scroll 0 0 transparent;
    color: #80BED6;
}

.blue:disabled{
    background: #99D9EA; /* for non-css3 browsers */
    color: #F5F5F5;
}

.button {
    border-radius: 0.5em 0.5em 0.5em 0.5em;
    -ms-border-radius:0.5em;
    -o-border-radius:15px;
    box-shadow: 0 1px 2px rgba(0, 0, 0, 0.2);
    cursor: pointer;
    display: inline-block;
    font: 14px/100% Arial,Helvetica,sans-serif;
    margin: 0 2px;
    outline: medium none;
    width: 120px;
    height:35px;
    text-align: center;
    text-decoration: none;
    text-shadow: 0 1px 1px rgba(0, 0, 0, 0.3);
    vertical-align: top;
    font-weight:bolder;
    border-bottom-left-radius:0.5em;
    border-bottom-right-radius:0.5em;
    border-top-left-radius:0.5em;
    border-top-right-radius:0.5em;
}
.button:hover {
    text-decoration: none;
}
.button:active {
    position: relative;
    top: 1px;
}

.button:disabled {
    position: relative;
    top:0px;
}



.textbox {
    height: 1.62em;
    line-height: 1.6em;
    padding: 2px 0.3em;
    border-radius: 4px 4px 4px 4px;
    outline: 0 none;
    display: inline-block;
    vertical-align: middle;
    border-bottom-left-radius:0.5em;
    border-bottom-right-radius:0.5em;
    border-top-left-radius:0.5em;
    border-top-right-radius:0.5em;
   /* background-color:transparent;*/
    border: 2px solid;
    border-color: #1FCAEC;
}

.textarea {
    height: 10.12em;
    line-height: 1.6em;
    padding: 2px 0.3em;
    border-radius: 4px 4px 4px 4px;
    outline: 0 none;
    display: inline-block;
    vertical-align: middle;

   /* background-color:transparent;*/
    border: 2px solid;
    border-color: #1FCAEC;
}

